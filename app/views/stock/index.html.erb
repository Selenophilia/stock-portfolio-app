<%= render partial: 'shared/navbar' %>
<div class="portfolio-container">
    <div class="portfolio-table">
        <div class="header-container">
            <h1 class="header__text">Your Portfolio</h1>

            <h3 class="header__text balance">Balance: <%= number_to_currency(@user.balance, precision:2) %></h1>
        </div>
           <% if @stocks.size > 0 %>
            <table class="table">
            <thead>
                <tr >
                <th scope="col">Stock</th>
                <th scope="col">Change</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Current Value</th>
                <th scope="col">Total Cost </th>
                </tr>
            </thead>
            <tbody>
            <%= @stock_data.each do |symbol, stock_data|%>
            <!-- stock_data: [quantity, price, change, total_price,open_price] -->
                <tr>
                 <td><%= symbol %></td> 
                <td ><%= stock_data[2]%></td>
                <td ><%= stock_data[0]%></td>
                <td ><%= stock_data[1]%></td>
                <td ><%= stock_data[4]%></td>
                <td ><%= stock_data[3]%></td>
                </tr>
            <% end %>
            </tbody>
            </table>
        <% else %>
            <p>No stocks yet</p>
        <% end %>
    </div>

    <div class="stock-form">
    <h3>Buy Stocks</h3>
    <%= simple_form_for @transaction, :url => user_transaction_path(@user.id) do |form| %>
        <%= form.fields_for :stock do |st| %>
                <div class="form-group">
                <%= st.input :symbol, as: :string,
                                        wrapper: false,
                                        required: false,
                                        label: "Ticker Symbol",
                                        input_html: {
                                            class: 'form-control',
                                        } %>
                </div>
        <% end %>
        <div class="form-group">
                <%= form.input :quantity, as: :integer,
                                        wrapper: false,
                                        required: false,
                                        label: "Quantity",
                                        input_html: {
                                            class: 'form-control',
                                        
                                        } %>
        </div>
        <%= form.submit "Submit", class: 'btn-stock' %>

    <%end%>

</div>

